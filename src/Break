public class Break extends Thread{
	
	Elev elev1;
	Elev elev2;
	Elev elev3;
	
	public Break(Elev one, Elev two, Elev three) {
		elev1 = one;
		elev2 = two;
		elev3 = three;
	}
	
	
	
	public void run() {
		
	
		try {
			Thread.sleep(7);
			elev1.jam = true;
			Thread.sleep(2);
			elev1.jam = false;
		} catch (InterruptedException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		try {
			Thread.sleep(3);
			//after a random time 
			elev2.functioning = false;
		} catch (InterruptedException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
	}

}
